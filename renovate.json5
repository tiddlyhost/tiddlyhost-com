//
// Configuration for Mend Renovate
// https://developer.mend.io/
//
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  // Use recommended defaults
  "extends": [
    "config:recommended"
  ],

  // Open PRs against devel branch instead of main
  "baseBranches": ["devel"],

  "packageRules": [
    {
      "matchManagers": ["bundler"],
      // Seems there's always a new version of this. Let's update
      // it now and again rather than generate an endless PR stream.
      "matchPackageNames": ["aws-sdk-s3"],
      "enabled": false
    },
    {
      // I mainly care about the ruby gems. For node modules, I'll
      // continue to update them manually using `make deps-update`.
      "matchManagers": ["yarn"],
      "enabled": false
    },
    {
      "matchManagers": ["docker"],
      // The docker.io/sbaird/tiddlyhost-base digest in this file is
      // updated with `make build-push-base` so don't create PRs for it.
      "matchFileNames": ["docker/Dockerfile.prod"],
      "enabled": false
    },
  ]
}
